<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="category_electrical_service">
            <field name="name">Electrical Service</field>
            <field name="description">Helps to manage electrical services</field>
            <field name="sequence">20</field>
        </record>
        <record id="electrical_user" model="res.groups">
            <field name="name">Electrical User</field>
            <field name="category_id" ref="category_electrical_service"/>
        </record>
        <record id="electrical_engineer" model="res.groups">
            <field name="name">Engineer</field>
            <field name="category_id" ref="category_electrical_service"/>
            <field name="implied_ids" eval="[(4, ref('electrical_user'))]"/>
        </record>
        <record id="electrical_supervisor" model="res.groups">
            <field name="name">Supervisor</field>
            <field name="category_id" ref="category_electrical_service"/>
            <field name="implied_ids" eval="[(4, ref('electrical_engineer'))]"/>
        </record>
        <record id="electrical_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="category_electrical_service"/>
            <field name="implied_ids" eval="[(4, ref('electrical_supervisor'))]"/>
        </record>
    </data>
</odoo>