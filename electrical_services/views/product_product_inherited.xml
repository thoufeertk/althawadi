<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_tree" model="ir.ui.view">
            <field name="name">hr.employee.inherited.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Employee">
                    <field name="name"/>
                    <field name="work_phone"/>
                </tree>
            </field>
        </record>
        <record id="employee_form" model="ir.ui.view">
            <field name="name">hr.employee.inherited.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Employee">
                    <sheet>
                        <field name="image_1920" widget='image' class="oe_avatar"
                               options='{"zoom": true, "preview_image":"image_128"}'/>
                        <div class="oe_title">
                            <group>
                                <field name="name"/>
                                <field name="work_phone"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_menu_electric_scope">
            <field name="context">{'default_type': 'service', 'default_is_electrical': True}</field>
            <field name="name">Electrical Scope</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('electrical_services.electrical_scope_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('electrical_services.electrical_scope_form_view')})]"/>
            <field name="domain">[('is_electrical', '!=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click here to create a new Electrical Scope
                </p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_menu_electric_scope_variant">
            <field name="context">{'default_type': 'service', 'default_is_electrical': True}</field>
            <field name="name">Electrical Scope</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('electrical_services.electrical_scope_variant_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('electrical_services.electrical_scope_variant_form_view')})]"/>
            <field name="domain">[('is_electrical', '!=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click here to create a new Electrical Scope
                </p>
            </field>
        </record>
        <record id="action_menu_electric_customers" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer',
                'default_customer_rank': 1}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click to create Customers</p>
            </field>
        </record>
        <record id="action_menu_electric_technicians" model="ir.actions.act_window">
            <field name="name">Technicians</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('electrical_services.employee_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('electrical_services.employee_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click to create Technicians
                </p>
            </field>
        </record>
        <record id="action_menu_electric_spare_parts" model="ir.actions.act_window">
            <field name="name">Electrical Accessories</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('type','!=','service')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click to create Electrical Accessories
                </p>
            </field>
        </record>
        <!-- Electrical Service main menu-->
        <menuitem id="electrical_service_main_menu" name="Electrical"
                  web_icon="electrical_services,static/description/web_icon.png"/>
        <!-- Master Data menu -->
        <menuitem id="electrical_service_masters_menu" name="Master Data" parent="electrical_service_main_menu"
                  sequence="4"/>
        <!-- Electrical Scope menu -->
        <menuitem id="electrical_service_scope_menu" name="Electrical Scope" parent="electrical_service_masters_menu"
                  action="action_menu_electric_scope" sequence="1"/>
         <!-- Electrical Scope variant menu -->
        <menuitem id="electrical_service_scope_variant_menu" name="Electrical Scope Variant" parent="electrical_service_masters_menu"
                  action="action_menu_electric_scope_variant" sequence="1"/>
        <!-- Electrical Customers-->
        <menuitem id="electrical_customers_menu" name="Customers" parent="electrical_service_masters_menu"
                  action="action_menu_electric_customers" sequence="2"/>
        <!-- Electrical Technicians-->
        <menuitem id="electrical_technicians_menu" name="Technicians" parent="electrical_service_masters_menu"
                  action="action_menu_electric_technicians" sequence="3"/>
        <!-- Electrical Spare Parts-->
        <menuitem id="electrical_spare_parts_menu" name="Electrical Accessories" parent="electrical_service_masters_menu"
                  action="action_menu_electric_spare_parts" sequence="4"/>
    </data>
</odoo>