<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="electrical_material_request_tree_view" model="ir.ui.view">
            <field name="name">electrical.material.request.tree.view</field>
            <field name="model">electrical.material.request</field>
            <field name="arch" type="xml">
                <tree string="Material Request">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="pending_list"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        <record id="electrical_material_request_form_view" model="ir.ui.view">
            <field name="name">electrical.material.request.form.view</field>
            <field name="model">electrical.material.request</field>
            <field name="arch" type="xml">
                <form string="Work Order">
                    <header>
                        <button name="action_send_email" type="object" string="Email Request" class="oe_highlight"
                                attrs="{'invisible': [('state','=','send')]}"/>
                        <button name="generate_purchase_order" type="object" string="Generate Purchase Order"
                                class="oe_highlight"
                                attrs="{'invisible': [('state','!=','send')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button class="oe_stat_button" name="button_view_purchase"
                                    attrs="{'invisible': [('purchase_order_count', '=', 0)]}"
                                    type="object" icon="fa-file-text">
                                <field name="purchase_order_count" widget="statinfo" string="Purchases"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" required="1"/>
                                <field name="pending_list" invisible="1"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="site_reference" widget="many2many_tags"/>
                                <field name="project_id"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Bill of Materials">
                                <field name="material_bom_line">
                                    <tree editable="bottom">
                                        <field name="work_spare_parts_id"/>
                                        <field name="work_spare_parts_qty"/>
                                        <field name="work_spare_unit"/>
                                        <field name="work_spare_parts_unit_price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="electrical_material_request_action" model="ir.actions.act_window">
            <field name="name">Electrical Material Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">electrical.material.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a Material Request
                </p>
            </field>
        </record>
        <menuitem id="material_request_menu" name="Material Request"
                  parent="electrical_services.work_order_main_menu" action="electrical_material_request_action"
                  sequence="5"/>
    </data>
</odoo>