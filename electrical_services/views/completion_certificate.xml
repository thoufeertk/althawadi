<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_completion_certificate_tree" model="ir.ui.view">
            <field name="name">view.completion.certificate.tree</field>
            <field name="model">completion.certificate</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Completion Certificate" create="0">
                    <field name="name"/>
                    <field name="enquiry_date"/>
                    <field name="enquiry_customer_id"/>
                    <field name="work_project_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_completion_certificate_form" model="ir.ui.view">
            <field name="name">view.completion.certificate.form</field>
            <field name="model">completion.certificate</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Completion Certificate" create="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <center>
                                    Completion Certificate
                                </center>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="enquiry_date"/>
                                <field name="enquiry_customer_id"/>
                            </group>
                            <group>
                                <field name="work_site_ref" widget="many2many_tags"/>
                                <field name="enquiry_customer_address"/>
                                <field name="electrical_order_picking_id"
                                       invisible="1"/>
                            </group>
                            <group>
                                <label for="completion_time" string="Completion Time"/>
                                <div>
                                    <field name="completion_time" class="oe_inline" nolabel="1"/>
                                    days
                                </div>
                                <field name="payment_term_id"/>
                            </group>
                            <group>
                                <field name="work_project_id" invisible="1"/>
                                <field name="quotation_id" attrs="{'invisible': [('quotation_id', '=', False)]}"/>
                                <field name="work_order_id"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page id="electrical_scope_tab"
                                  string="Electrical Scope">
                                <field name="enquiry_electrical_scope_ids"
                                       mode="tree">
                                    <tree editable="bottom" multi_edit="1">
                                        <field name="enquiry_scope_id"/>
                                        <field name="enquiry_scope_code"/>
                                        <field name="enquiry_scope_description"/>
                                        <field name="enquiry_scope_qty"/>
                                        <field name="enquiry_scope_price"/>
                                        <field name="enquiry_tax"
                                               widget="many2many_tags"
                                               optional="show"/>
                                        <field name="enquiry_tax_amount"
                                               optional="hide"/>
                                        <field name="enquiry_subtotal"/>
                                        <field name="enquiry_total"/>
                                        <field name="warranty_status"/>
                                    </tree>
                                </field>
                                <group name="amount_total" col="6">
                                    <group class="oe_subtotal_footer oe_right"
                                           colspan="2" name="sale_total">
                                        <field name="amount_untaxed"
                                               widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="amount_tax"
                                               widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                            <label for="amount_subtotal"/>
                                        </div>
                                        <field name="amount_subtotal" nolabel="1"
                                               class="oe_subtotal_footer_separator"
                                               widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                    </group>
                                    <div class="oe_clear"/>
                                </group>
                            </page>

                            <page id="spare_parts_tabs"
                                  string="Electrical Accessories">
                                <field name="enquiry_spare_parts_ids"
                                       mode="tree">
                                    <tree editable="bottom">
                                        <field name="enquiry_spare_parts_id"/>
                                        <field name="enquiry_spare_parts_qty"/>
                                        <field name="enquiry_spare_parts_unit_price"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="action_menu_completion_certificate">
            <field name="name">Completion Certificate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">completion.certificate</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Completion Certificates
                </p>
                <p>
                    Create a Completion Certificate and enter the details.
                </p>
            </field>
        </record>

        <menuitem id="menu_completion_cetificate" name="Certificates"
                  parent="electrical_services.work_order_main_menu"
                  sequence="11"
                  action="action_menu_completion_certificate"/>
    </data>
</odoo>