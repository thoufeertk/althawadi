<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="certificate_report_form_view" model="ir.ui.view">
            <field name="name">certificate.report.form.view</field>
            <field name="model">certificate.report</field>
            <field name="arch" type="xml">
                <form string="Certificate Report">
                    <separator string="Certificate Report"/>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="customer_id" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button name="print_certificate_report" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" type="object" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="certificate_report_action" model="ir.actions.act_window">
            <field name="name">Completion Certificate Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">certificate.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="certificate_report_form_view"/>
            <field name="target">new</field>
        </record>
        <menuitem id="electrical_certificate_report_menu" name="Certificate Report"
                  parent="electrical_services.electrical_services_report_menu"
                  action="certificate_report_action"/>
    </data>
</odoo>