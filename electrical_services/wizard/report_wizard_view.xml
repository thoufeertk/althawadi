<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="electrical_report_form_view" model="ir.ui.view">
            <field name="name">electrical.report.form.view</field>
            <field name="model">electrical.report</field>
            <field name="arch" type="xml">
                <form string="Electrical Report">
                    <separator string="Electrical Report"/>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <footer>
                        <button name="print_electrical_report" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" type="object" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="electrical_report_action" model="ir.actions.act_window">
            <field name="name">Electrical Operation Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">electrical.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="electrical_report_form_view"/>
            <field name="target">new</field>
        </record>
        <menuitem id="electrical_services_report_menu" name="Reporting"
                  parent="electrical_services.electrical_service_main_menu"/>
        <menuitem id="electrical_services_monthly_report_menu" name="Monthly Report"
                  parent="electrical_services_report_menu"
                  action="electrical_report_action"/>
    </data>
</odoo>