<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="material_request_report_document">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2 class="mt16">
                            <span>Order Reference #</span>
                            <span t-field="doc.name"/>
                        </h2>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th class="text-left">Material</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Unit</th>
                                </tr>
                            </thead>
                            <tbody class="material_request_tbody">
                                <t t-foreach="doc.material_bom_line"
                                   t-as="line">
                                    <tr>
                                        <td class="text-left">
                                            <span t-field="line.work_spare_parts_id.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.work_spare_parts_qty"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.work_spare_parts_id.uom_id"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </template>

        <template id="material_request_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="electrical_services.material_request_report_document"
                       t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>