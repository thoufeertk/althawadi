<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="report_certificate_document">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <center>
                            <h1>Completion Certificate</h1>
                            <br/>
                            <br/>
                        </center>
                        <div class="page">
                            <div class="oe_structure"/>

                            <h2 class="mt16">
                                <span>Certificate</span>
                                <span t-field="doc.name"/>
                            </h2>
                            <div class="row mt32 mb32" id="informations">
                                <div t-if="doc.enquiry_date"
                                     class="col-auto mw-100 mb-2">
                                    <strong>Enquiry Date:</strong>
                                    <p class="m-0"
                                       t-field="doc.enquiry_date"
                                       t-options='{"widget": "date"}'/>
                                </div>
                                <div t-if="doc.enquiry_customer_id"
                                     class="col-auto mw-100 mb-2">
                                    <strong>Customer:</strong>
                                    <p class="m-0"
                                       t-field="doc.enquiry_customer_id.name"/>
                                </div>
                                <div t-if="doc.work_project_id"
                                     class="col-auto mw-100 mb-2">
                                    <strong>Project:</strong>
                                    <p class="m-0" t-field="doc.work_project_id"
                                    />
                                </div>
                                <div t-if="doc.completion_time"
                                     class="col-auto mw-100 mb-2">
                                    <strong>Completion Time:</strong>
                                    <p class="m-0"
                                       t-field="doc.completion_time"/>
                                </div>
                            </div>
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th class="text-left">Electrical Scope
                                        </th>
                                        <th class="text-right">Item Code</th>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right">Amount</th>
                                        <th class="text-right">Taxes</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody class="certificate_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>

                                    <t t-foreach="doc.enquiry_electrical_scope_ids"
                                       t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.enquiry_scope_id.name"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="line.enquiry_scope_code"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.enquiry_scope_qty"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.enquiry_scope_price"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.enquiry_tax"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.enquiry_total"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <div class="clearfix">
                                <div id="total" class="row">
                                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                        <table class="table table-sm">
                                            <tr class="border-black o_subtotal"
                                                style="">
                                                <td>
                                                    <strong>Subtotal</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Tax</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_tax" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_total">
                                                <td>
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </t>
            </t>
        </template>

        <template id="completion_certificate_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="electrical_services.report_certificate_document"
                       t-lang="doc.enquiry_customer_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>