<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_generator_sale_inherited" model="ir.ui.view">
            <field name="name">sale.order.generator.sale.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_generator_sale" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="gen_service_type" attrs='{"invisible": [("is_generator_sale", "=", False)]}'/>
                    <field name="service_period_type" attrs='{"invisible": [("is_generator_sale", "=", False)]}'/>
                    <field name="allocated_no_service" attrs='{"invisible": [("is_generator_sale", "=", False)]}'/>
                    <field name="remaining_no_service" attrs='{"invisible": [("is_generator_sale", "=", False)]}'/>
                    <field name="availability_reason" attrs='{"invisible": [("is_generator_sale", "=", False)]}'/>
                </xpath>
                <xpath expr="//page[@name='order_lines']" position="after">
                    <page name="location_details" string="Location Details">
                        <group>
                            <field name="service_bld_number"/>
                            <field name="service_road_number"/>
                            <field name="service_area_number"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="action_menu_generator_sales" model="ir.actions.act_window">
            <field name="name">Generator Sales</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_generator_sale', '!=', False)]</field>
            <field name="context">{'default_is_generator_sale': True}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">You can create New generator sales from here</p>
            </field>
        </record>
        <menuitem id="menu_generator_sales" name="Generator Sales"
                  parent="generator_service_maintenance.menu_service_maintenance"
                  action="action_menu_generator_sales" sequence="1"
                  groups="sales_team.group_sale_salesman,generator_service_maintenance.generator_engineer"/>
    </data>
</odoo>