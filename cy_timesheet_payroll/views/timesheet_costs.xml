<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_view_form_wage" model="ir.ui.view">
        <field name="name">hr.contract.form.wages</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']/group/group" position="inside">
                <label for="normal_overtime_wage"/>
                <div class="o_row" name="normal_overtime_wage">
                    <field name="normal_overtime_wage"/>
                    <span>/hour</span>
                </div>
                <label for="holiday_overtime_wage"/>
                <div class="o_row" name="holiday_overtime_wage">
                    <field name="holiday_overtime_wage"/>
                    <span>/hour</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>