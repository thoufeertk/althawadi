<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="cy_timesheet_payroll_structure_type" model="hr.payroll.structure.type">
            <field name="name">Hourly Pay (Structure Type)</field>
            <field name="country_id" eval="False"/>
            <field name="wage_type">hourly</field>
        </record>
        <!--        demo data for payroll structure-->
        <record id="cy_timesheet_payroll_structure" model="hr.payroll.structure">
            <field name="name">Hourly Pay (Structure)</field>
            <field name="type_id" ref="cy_timesheet_payroll_structure_type"/>
<!--            <field name="regular_pay">TRUE</field>-->



        </record>

        <record id="cy_timesheet_normal_time_rule" model="hr.salary.rule">
            <field name="name">Normal Time</field>
            <field name="sequence" eval="1"/>
            <field name="code">NT</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="struct_id" ref="cy_timesheet_payroll_structure"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = worked_days.NWT.amount
            </field>
        </record>


        <record id="cy_timesheet_normal_overtime_rule" model="hr.salary.rule">
            <field name="name">Normal Overtime</field>
            <field name="sequence" eval="1"/>
            <field name="code">NOT</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="struct_id" ref="cy_timesheet_payroll_structure"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = worked_days.NOT.amount
            </field>
        </record>

        <record id="cy_timesheet_holiday_overtime_rule" model="hr.salary.rule">
            <field name="name">Holiday Overtime</field>
            <field name="sequence" eval="1"/>
            <field name="code">HWT</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="struct_id" ref="cy_timesheet_payroll_structure"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = worked_days.HWT.amount
            </field>
        </record>

        <record id="cy_timesheet_payroll_over_time" model="hr.work.entry.type">
            <field name="name">Normal Overtime</field>
            <field name="code">NOT</field>
            <field name="round_days">NO</field>
        </record>
        <record id="cy_timesheet_payroll_holiday" model="hr.work.entry.type">
            <field name="name">Holiday Work Time</field>
            <field name="code">HWT</field>
            <field name="round_days">NO</field>
        </record>
        <record id="cy_timesheet_payroll_normal" model="hr.work.entry.type">
            <field name="name">Normal Work Time</field>
            <field name="code">NWT</field>
            <field name="round_days">NO</field>
        </record>
    </data>
</odoo>