<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="account_move_inherit" model="ir.ui.view">
            <field name="name">account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='header_left_group']" position="before">
                    <group colspan="4">
                        <div>
                            <field name="company_id" string="Company"/>
                            <br/>
                            <field name="street" attrs="{'invisible': [('street', '=', False)]}"/>
                            <br/>
                            <field name="street2" attrs="{'invisible': [('street2', '=', False)]}"/>
                            <br/>
                            <field name="zip" attrs="{'invisible': [('zip', '=', False)]}"/>
                            <br/>
                            <field name="city" attrs="{'invisible': [('city', '=', False)]}"/>
                            <br/>
                            <field name="state_id" attrs="{'invisible': [('state_id', '=', False)]}"/>
                            <br/>
                            <field name="country_id" attrs="{'invisible': [('country_id', '=', False)]}"/>
                            <br/>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="company_vat_no" string="Vat Account Number"/>
                            <field name="invoice_origin" string="Buyers Order No."/>
                            <field name="order_date"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field name="vat_account_no" string="Vat Account Number"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="attributes">
                    <attribute name="string">Date Of Issue</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="ordinal_number" string="code"/>
                    <field name="date_of_supply" optional="show"/>
                    <field name="delivery_ref" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
                    <attribute name="string">Vat(%)</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"
                       position="attributes">
                    <attribute name="string">Net Price</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_totals_json']" position="attributes">
                    <attribute name="string">Total exc.VAT</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_total']" position="attributes">
                    <attribute name="string">Total Inc.VAT</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_residual']" position="attributes">
                    <attribute name="string">Balance Due</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
