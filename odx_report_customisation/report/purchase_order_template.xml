<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="o.with_header">
                    <t t-call="web.external_layout">
                        <style>
                            .table-border {
                            border: 1px solid !important;
                            }
                        </style>
                        <div class="page">
                            <h2 style="text-align:center;">
                                <span>
                                    <b>
                                        <u>Purchase Order</u>
                                    </b>
                                </span>
                            </h2>
                            <div class="row">
                                <div class="col-8">
                                    <table width="100%">
                                        <tr>
                                            <td>
                                                Supplier Name :
                                                <span t-field="o.partner_id.name"/>

                                                <br/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Address</span>
                                                <span t-field="o.partner_id.street"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Phone :</span>
                                                <span t-field="o.partner_id.phone"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Email :</span>
                                                <span t-field="o.partner_id.email"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>VAT No :</span>
                                                <span t-field="o.partner_id.vat"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Rev No :</span>
                                                <span t-field="o.rev_no"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Rev Date :</span>
                                                <span t-field="o.rev_date"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Job Number :</span>
                                                <span t-field="o.origin"/>
                                            </td>
                                        </tr>
                                        <br/>
                                        <tr>
                                            <td>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-4">
                                    <table>
                                        <tr>
                                            <td>
                                                <span>Date :</span>
                                                <span t-field="o.date_planned"/>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>Order Number :
                                                <span t-field="o.name"/>
                                            </td>
                                            <br/>
                                        </tr>

                                        <tr>
                                            <td>
                                                <span>Delivery to :</span>
                                                <span t-field="o.delivery_to"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Payment Terms :</span>
                                                <span t-field="o.payment_term_id"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Delivery Terms :</span>
                                                <span t-field="o.delivery_terms"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Ordered By :</span>
                                                <span t-field="o.user_id"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Approved By:</span>
                                                <span/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <!--                        </div>-->
                            <br/>
                            <br/>
                            <b>Products</b>

                            <table style="border: 1px solid black;width:100%;padding:10px;" width="100%">
                                <thead>
                                    <tr>
                                        <th style="border: 1px solid black;padding:10px;">Sl.No</th>
                                        <th style="border: 1px solid black;padding:10px;">Item Description</th>
                                        <th style="border: 1px solid black;padding:10px;">Qty</th>
                                        <th style="border: 1px solid black;padding:10px;">Unit Price (<t t-esc="o.currency_id.symbol"/>)</th>
                                        <th style="border: 1px solid black;padding:10px;">Discount (<t t-esc="o.currency_id.symbol"/>)</th>
                                        <th style="border: 1px solid black;padding:10px;">Net Price (<t t-esc="o.currency_id.symbol"/>)</th>
                                        <th style="border: 1px solid black;padding:10px;">Vat (<t t-esc="o.currency_id.symbol"/>)</th>
                                        <th style="border: 1px solid black;padding:10px;">Total Amount(Inc Vat) (<t t-esc="o.currency_id.symbol"/>)</th>
                                    </tr>
                                </thead>

                                <tbody style="text-align: center;">
                                    <t t-set="sl" t-value="0"/>
                                    <t t-foreach="o.order_line" t-as="line">
                                        <tr>

                                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                <t t-set="sl" t-value="sl + 1"/>
                                                <td class="table-border">
                                                    <span t-esc="sl"/>
                                                </td>
                                                <td class="table-border">
                                                    <span t-field="line.product_id"/>
                                                </td>
                                                <td class="table-border">
                                                    <span t-esc="line.product_qty"/>
                                                </td>
                                                <td class="table-border">
                                                    <span t-esc="line.price_unit"/>
                                                </td>
                                                <td class="table-border">
                                                    <span t-esc="line.discount_amount"/>
                                                </td>
                                                <td class="table-border">
                                                    <span t-esc="line.price_subtotal"/>
                                                </td>
                                                <td class="table-border">
                                                    <span t-esc="'%.3f'%  line.price_tax"/>
                                                </td>
                                                <td class="table-border">
                                                    <span t-esc="line.price_total"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>

                                </tbody>
                            </table>
                            <br/>

                            <table style="height: 60px; width: 380px; margin-left:550px;"
                                       class="table table_border">
                                    <tr>
                                        <td style="text-align:center">
                                            Amount Untaxed :
                                        </td>
                                        <td style="text-align:right">
                                            <t t-esc="o.amount_untaxed"
                                               t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td style="text-align:center">
                                            Amount tax :
                                        </td>
                                        <td style="text-align:right">
                                            <t t-esc="o.amount_tax"
                                               t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <th style="text-align:center">
                                            Amount Total :
                                        </th>
                                        <td style="text-align:right">
                                            <t t-esc="o.amount_total"
                                               t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>

