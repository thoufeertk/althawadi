<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_purchase_order_inherits" model="ir.ui.view">
        <field name="name">purchase.order.form.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='discount']" position="after">
                <field name="discount_amount"/>
<!--                <field name="odx_price_subtotal" widget='monetary' options="{'currency_field': 'currency_id'}"/>-->
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="with_header"/>
            </xpath>
            <xpath expr="//field[@name='incoterm_id']" position="after">
                <field name="delivery_to"/>
                <field name="rev_no"/>
                <field name="rev_date"/>
                <field name="delivery_terms"/>
            </xpath>
         </field>
    </record>
</odoo>

