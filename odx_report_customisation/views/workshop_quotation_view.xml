<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_form_inherit1" model="ir.ui.view">
        <field name="name">product.form</field>
        <field name="model">workshop.quotation</field>
        <field name="inherit_id" ref="workshop.workshop_quotation_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[5]" position="after">
                <div>
                    <sheet>
                        <group>
                            <group>
                                <field name="odx_header" force_save="1"/>
                                <field name="odx_sales_man" invisible="1"/>
                                <field name="odx_gate_pass_no"/>
                            </group>
                        </group>
                    </sheet>
                </div>
            </xpath>
            <xpath expr="//group[@name='machine']" position="after">

                <group>
                    <field name="odx_attention_id" placeholder="Attention"/>

                        </group>
                <group></group>
                        <group>
                    <field name="odx_warranty" placeholder="Warranty"/>
                    <field name="odx_warranty_description"/>

                    <field name="odx_testing" placeholder="Testing and Inspection"/>
                    <field name="odx_testing_description"/>
                </group>
                <group>

                    <field name="odx_extend_of_quote" placeholder="Extend of Quote"/>
                    <field name="odx_extend_of_quote_description"/>

                    <field name="odx_terms_and_condition" placeholder="Delivery"/>
                    <field name="odx_terms_and_condition_description"/>

                    <field name="odx_payment_term" placeholder="Payment Term"/>
                    <field name="odx_payment_term_description"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

