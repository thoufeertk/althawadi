<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_invoice_forms" model="ir.ui.view">
        <field name="name">Account Invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_date']" position="after">
                <field name="odx_gate_pass"/>
                <field name="odx_asset_number"/>
            </xpath>
            <xpath expr="//field[@name='narration']" position="after">
                <field name="odx_authorized_signature" widget="signature"/>
            </xpath>
             <xpath expr="//field[@name='vat_account_no']" position="after">
                <field name="odx_header" string="With Header"/>
                 <field name="job_number" string="Job Number"/>
            </xpath>
            <xpath expr="//field[@name='source_id']" position="after">
                <field name="supplier_ref" invisible="1"/>
                <field name="other_ref" invisible="1"/>
                <field name="buyers_order_no" invisible="1"/>
                <field name="despatch_document_no" invisible="1"/>
                <field name="despatch_through" invisible="1"/>
                <field name="destination" invisible="1"/>
                <field name="terms_of_delivery" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>