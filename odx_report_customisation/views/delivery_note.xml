<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="delivery_note_forms" model="ir.ui.view">
        <field name="name">Delivery Note</field>
        <field name="model">delivery.note</field>
        <field name="inherit_id" ref="workshop.delivery_note_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order']" position="after">
                <field name="odx_gate_pass_no"/>
                <field name="odx_delivered_by"/>
                <field name="odx_driver"/>
                <field name="odx_vehicle_no"/>
            </xpath>
            <xpath expr="//field[@name='purchase_date']" position="after">
                <field name="odx_received_by"/>
                <field name="odx_received_date"/>
                <field name="odx_receiver_phone"/>
                <field name="odx_asset_no"/>
                <field name="odx_date_of_supply"/>
            </xpath>
             <xpath expr="//field[@name='job_reference']" position="after">
                <field name="odx_header"/>
            </xpath>
        </field>
    </record>
</odoo>