<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="category_mechanical_service">
            <field name="name">Mechanical Service</field>
            <field name="description">Helps to manage mechanical services</field>
            <field name="sequence">20</field>
        </record>
        <record id="mechanical_user" model="res.groups">
            <field name="name">Mechanical User</field>
            <field name="category_id" ref="category_mechanical_service"/>
        </record>
        <record id="mechanical_engineer" model="res.groups">
            <field name="name">Engineer</field>
            <field name="category_id" ref="category_mechanical_service"/>
            <field name="implied_ids" eval="[(4, ref('mechanical_user'))]"/>
        </record>
        <record id="mechanical_supervisor" model="res.groups">
            <field name="name">Supervisor</field>
            <field name="category_id" ref="category_mechanical_service"/>
            <field name="implied_ids" eval="[(4, ref('mechanical_engineer'))]"/>
        </record>
        <record id="mechanical_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="category_mechanical_service"/>
            <field name="implied_ids" eval="[(4, ref('mechanical_supervisor'))]"/>
        </record>
    </data>
</odoo>