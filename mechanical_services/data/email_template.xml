<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Email Template for mechanical Quotation-->
        <record id="email_template_mechanical_quotation" model="mail.template">
            <field name="name">Mechanical Quotation Email</field>
            <field name="model_id" ref="mechanical_services.model_mechanical_quotation"/>
            <field name="email_from">{{(user.email)}}</field>
            <field name="email_to">{{object.mechanical_customer_id.email}}</field>
            <field name="subject">Ref {{object.name or 'n/a' }}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>
                Hello,
                        <br/>
                        <br/>
                        Your quotation
                    <t t-out="object.name"/>,
                        amounting in
                    <t t-out="object.amount_total"
                    t-options='{"widget": "monetary", "display_currency": object.currency_id}'/>
                        is ready for review.
                        <br/>
                        <br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                </p>
            </field>
            <field name="report_template"
                   ref="mechanical_services.mechanical_operation_quotation"/>
            <field name="report_name">{{(object.name or 'n/a').replace('/','_')}}</field>
        </record>


        <!--Email template for Material Request-->
        <record id="email_template_mechanical_material_request" model="mail.template">
            <field name="name">Material Request Email</field>
            <field name="model_id" ref="mechanical_services.model_mechanical_material_request"/>
            <field name="email_from">{{(user.email)}}</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="subject">Material Request (Ref {{object.name}})</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{object.partner_id.lang}}</field>
            <field name="body_html" type="html">
                <p>
                    <p style="margin-bottom:20px;">Hello <t t-out="object.partner_id.name"/></p>
                    <p style="margin-bottom:20px;">Your Request <t t-out="object.name"/> is ready for review.</p>
                    <p style="margin-bottom:10px;"><b>Bill of materials Details</b></p>
                    <table border="2" cellpadding="10">
                        <tbody>
                            <tr>
                              <th style="padding: 5px;">Product</th>
                              <th>Quantity</th>
                              <th>Price</th>
                            </tr>
<!--                            % for lines in object.material_bom_line:-->
                            <t t-foreach="object.material_bom_line" t-as="lines">
                            <tr>
                              <td style="padding: 5px;"><t t-out="lines.work_spare_parts_id.name"/></td>
                              <td><t t-out="lines.work_spare_parts_qty"/></td>
                              <td><t t-out="lines.work_spare_parts_unit_price"/></td>
                            </tr>
                            </t>
<!--                           % endfor-->
                        </tbody>
                    </table>
                </p>
            </field>
            <field name="report_template"
                   ref="mechanical_services.material_request"/>
            <field name="report_name">{{(object.name or 'n/a').replace('/','_')}}</field>
        </record>
    </data>
</odoo>