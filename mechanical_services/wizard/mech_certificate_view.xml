<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mech_certificate_report_form_view" model="ir.ui.view">
            <field name="name">mech.certificate.report.form.view</field>
            <field name="model">mech.certificate.report</field>
            <field name="arch" type="xml">
                <form string="Mechanical Certificate Report">
                    <separator string="Mechanical Certificate Report"/>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="customer_id" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button name="print_certificate_report" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" type="object" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="mechanical_certificate_report_action" model="ir.actions.act_window">
            <field name="name">Mechanical Completion Certificate Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mech.certificate.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mech_certificate_report_form_view"/>
            <field name="target">new</field>
        </record>
        <menuitem id="mechanical_certificate_report_menu" name="Certificate Report"
                  parent="mechanical_services.mechanical_services_report_menu"
                  action="mechanical_certificate_report_action"/>
    </data>
</odoo>