<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mechanical_report_form_view" model="ir.ui.view">
            <field name="name">mechanical.report.wizard.form.view</field>
            <field name="model">mechanical.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Mechanical Report">
                    <separator string="Mechanical Report"/>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <footer>
                        <button name="print_mechanical_report" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" type="object" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="mechanical_report_action" model="ir.actions.act_window">
            <field name="name">Mechanical Operation Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mechanical.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mechanical_report_form_view"/>
            <field name="target">new</field>
        </record>
        <menuitem id="mechanical_services_report_menu" name="Reporting"
                  parent="mechanical_services.mechanical_service_main_menu"/>
        <menuitem id="mechanical_services_monthly_report_menu" name="Monthly Report"
                  parent="mechanical_services_report_menu"
                  action="mechanical_report_action"/>
    </data>
</odoo>