<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="monthly_mechanical_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <center>
                            <h3>Monthly Mechanical Operation Report</h3>
                            <br/>
                            <br/>
                            <div id="informations">
                                <div class="float-left">
                                    <strong>Start Date:</strong>
                                    <t t-esc="start_date"/>
                                </div>
                                <div class="float-right">
                                    <strong>End Date:</strong>
                                    <t t-esc="end_date"/>
                                </div>
                            </div>
                        </center>
                        <br/>
                        <br/>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Work Order</th>
                                    <th>Date of Operation</th>
                                    <th>Customer</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="line">
                                    <tr>
                                        <td style="width:10%">
                                            <span t-esc="line['work_order_ref']"/>
                                        </td>
                                        <td style="width:10%">
                                            <span t-esc="line['work_order_date']"/>
                                        </td>
                                        <td style="width:10%">
                                            <span t-esc="line['customer_name']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>