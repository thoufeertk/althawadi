<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="mech_quotation_report_document">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <center>
                            <h1>Mechanical Quotation Report</h1>
                            <br/>
                            <br/>
                        </center>
                        <div class="page">
                            <div class="oe_structure"/>

                            <h2 class="mt16">
                                <span>Quotation #</span>
                                <span t-field="doc.name"/>
                            </h2>
                            <div id="informations" class="row mt32 mb32">
                                <div class="col-auto mw-100 mb-2"
                                     t-if="doc.mechanical_customer_id">
                                    <strong>Customer:</strong>
                                    <span t-field="doc.mechanical_customer_id"/>
                                </div>
                            </div>

                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th class="text-left">Mechanical Scope</th>
                                        <th class="text-right">Item Code</th>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right">Amount</th>
                                        <th class="text-right">Taxes</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody class="quotation_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>

                                    <t t-foreach="doc.quotation_scope_line_ids"
                                       t-as="line">

                                        <t t-set="current_subtotal"
                                           t-value="current_subtotal + line.quotation_scope_total"/>

                                        <tr>
                                            <td>
                                                <span t-field="line.quotation_scope_id.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quotation_scope_code"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quotation_scope_qty"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quotation_scope_price"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.quotation_scope_tax))"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quotation_scope_total"
                                                      t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <div class="clearfix" name="qo_total_summary">
                                <div id="total" class="row" name="total">
                                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                        <table class="table table-sm">
                                            <tr class="border-black o_subtotal"
                                                style="">
                                                <td>
                                                    <strong>Subtotal</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_untaxed"
                                                          t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Tax:</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_tax"
                                                          t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                                </td>
                                            </tr>

                                            <tr class="border-black o_total">
                                                <td>
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_total"
                                                          t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <template id="mech_quotation_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="mechanical_services.mech_quotation_report_document"
                       t-lang="doc.mechanical_customer_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>