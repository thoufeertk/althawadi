<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_task_form_mechanical_inherit" model="ir.ui.view">
            <field name="name">project.task.form.mechanical.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="mechanical_order_id" attrs="{'invisible': [('mechanical_order_id', '=', False)]}"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="submit_mechanical_task" type="object" string="Submit"
                            attrs="{'invisible': [('mechanical_order_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

