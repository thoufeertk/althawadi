<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mechanical_employee_tree" model="ir.ui.view">
            <field name="name">hr.employee.inherited.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Employee">
                    <field name="name"/>
                    <field name="work_phone"/>
                </tree>
            </field>
        </record>
        <record id="mechanical_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.inherited.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Employee">
                    <sheet>
                        <field name="image_1920" widget='image' class="oe_avatar"
                               options='{"zoom": true, "preview_image":"image_128"}'/>
                        <div class="oe_title">
                            <group>
                                <field name="name"/>
                                <field name="work_phone"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_menu_mechanic_scope">
            <field name="context">{'default_type': 'service', 'default_is_mechanical': True}</field>
            <field name="name">Mechanical Scope</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('mechanical_services.mechanical_scope_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('mechanical_services.mechanical_scope_form_view')})]"/>
            <field name="domain">[('is_mechanical', '!=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click here to create a new Mechanical Scope
                </p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_menu_mechanic_scope_variant">
            <field name="context">{'default_type': 'service', 'default_is_mechanical': True}</field>
            <field name="name">Mechanical Scope</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('mechanical_services.mechanical_scope_variant_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('mechanical_services.mechanical_scope_variant_form_view')})]"/>
            <field name="domain">[('is_mechanical', '!=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click here to create a new Mechanical Scope
                </p>
            </field>
        </record>
        <record id="action_menu_mechanic_customers" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer',
                'default_customer_rank': 1}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click to create Customers</p>
            </field>
        </record>
        <record id="action_menu_mechanic_technicians" model="ir.actions.act_window">
            <field name="name">Technicians</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('mechanical_services.mechanical_employee_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('mechanical_services.mechanical_employee_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click to create Technicians
                </p>
            </field>
        </record>
        <record id="action_menu_mechanic_spare_parts" model="ir.actions.act_window">
            <field name="name">Mechanical Accessories</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('type','!=','service')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click to create Mechanical Accessories
                </p>
            </field>
        </record>
        <!-- mechanical Service main menu-->
        <menuitem id="mechanical_service_main_menu" name="Mechanical"
                  web_icon="mechanical_services,static/description/web_icon.png"/>
        <!-- Master Data menu -->
        <menuitem id="mechanical_service_masters_menu" name="Master Data" parent="mechanical_service_main_menu"
                  sequence="4"/>
        <!-- mechanical Scope menu -->
        <menuitem id="mechanical_service_scope_menu" name="Mechanical Scope" parent="mechanical_service_masters_menu"
                  action="action_menu_mechanic_scope" sequence="1"/>
        <!-- mechanical Scope variant menu -->
        <menuitem id="mechanical_service_scope_variant_menu" name="Mechanical Scope Variant" parent="mechanical_service_masters_menu"
                  action="action_menu_mechanic_scope_variant" sequence="1"/>
        <!-- mechanical Customers-->
        <menuitem id="mechanical_customers_menu" name="Customers" parent="mechanical_service_masters_menu"
                  action="action_menu_mechanic_customers" sequence="2"/>
        <!-- mechanical Technicians-->
        <menuitem id="mechanical_technicians_menu" name="Technicians" parent="mechanical_service_masters_menu"
                  action="action_menu_mechanic_technicians" sequence="3"/>
        <!-- mechanical Spare Parts-->
        <menuitem id="mechanical_spare_parts_menu" name="Mechanical Accessories"
                  parent="mechanical_service_masters_menu"
                  action="action_menu_mechanic_spare_parts" sequence="4"/>
    </data>
</odoo>