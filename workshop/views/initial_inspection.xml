<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="initial_inspection_filter" model="ir.ui.view">
        <field name="name">initial.inspection.search</field>
        <field name="model">initial.inspection</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <search string="Customer">
                <field name="customer_name" string="Customer" filter_domain="[('customer_name','ilike',self)]"/>
                <field name="name" string="Inspection" filter_domain="[('name','ilike',self)]"/>
                <field name="enquiry_number" string="Enquiry" filter_domain="[('enquiry_number','ilike',self)]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="customer_name" domain="[]" context="{'group_by':'customer_name'}"/>
                    <filter string="Priority" name="priority" domain="[]" context="{'group_by':'service_priority'}"/>
                    <filter string="Machine Type" name="machine_type" domain="[]"
                            context="{'group_by':'machine_type'}"/>
                    <filter string="State" name="state" domain="[]"
                            context="{'group_by':'state'}"/>
                </group>

                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
            </search>
        </field>
    </record>
    <record id="initial_inspection_form" model="ir.ui.view">
        <field name="name">Initial Inspection</field>
        <field name="model">initial.inspection</field>
        <field name="arch" type="xml">
            <form string="Initial Diagnosis Report">
                <header>
                    <button name="validate" class="btn-primary" type="object"
                            string="Validate" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,done"/>
                    <button name="mechanical_report" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"
                            string="Create Mechanical Report" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button class="oe_stat_button" name="button_workorder"
                                type="object" icon="fa-pencil-square-o"
                                attrs="{'invisible': [('order_count', '=', 0)]}">
                            <field name="order_count" widget="statinfo" string="Work Order"/>
                        </button>
                        <button class="oe_stat_button" name="button_mechanical"
                                type="object" icon="fa-pencil-square-o"
                                attrs="{'invisible': [('mechanical_count', '=', 0)]}">
                            <field name="mechanical_count" widget="statinfo" string="Mechanical Report"/>
                        </button>
                    </div>
                    <div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <div>
                                <group>
                                    <field name="service_deadline" invisible="1"/>
                                    <field name="amc_customer" invisible="1"/>
                                    <field name="enquiry_number" options="{'no_create_edit': True}"
                                           attrs="{'invisible': [('amc_customer', '!=', False)]}"/>
                                    <field name="customer_name" options="{'no_create_edit': True}"
                                    />
                                    <field name="machine_type" options="{'no_create_edit': True}"
                                           context="{'form_view_ref': 'workshop.machine_type_form_view','default_is_machine': True,'default_type': 'service'}"
                                           attrs="{'invisible': ['|',('customer_name', '=', False),('service_deadline', '=', False)]}"/>
                                    <field name="quantity" invisible="1"/>
                                    <field name="contract_id" attrs="{'invisible': [('amc_customer', '=', False)]}"/>
                                    <field name="contract_amount"
                                           attrs="{'invisible': [('amc_customer', '=', False)]}"/>
                                </group>
                            </div>
                            <div>
                                <group>
                                    <field name="service_deadline"/>
                                    <field name="repair_reason"/>
                                    <field name="service_priority" widget="radio"
                                           options="{'horizontal': true}"/>
                                </group>
                            </div>
                        </group>
                    </div>
                    <notebook>
                        <page string="Machine details">
                            <group>
                                <group>
                                    <field name="category"/>
                                    <field name="made"/>
                                    <field name="kilo"/>
                                    <field name="kva"/>
                                    <field name="horsepower"/>
                                    <field name="machine_serial_number"/>
                                    <field name="item_code"/>
                                    <field name="rpm"/>
                                </group>
                                <group>
                                    <field name="pole"/>
                                    <field name="volt"/>
                                    <field name="amps"/>
                                    <field name="hertz"/>
                                    <field name="motor_no"/>
                                    <field name="make"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parts Required">
                            <field name="parts_required">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create_edit': True, 'no_open': True}"/>
                                    <field name="quantity"/>
                                    <field name="product_unit" options="{'no_create_edit': True, 'no_open': True}"/>
                                    <field name="cost"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Services">
                            <field name="services">
                                <tree editable="bottom">
                                    <field name="mechanical_works" options="{'no_create_edit': True, 'no_open': True}"/>
                                    <field name="total_hours"/>
                                    <field name="cost" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Service Cost Estimation" invisible="1">
                            <group>
                                <label for="services" string="SERVICES" style="font-weight: bold;font-size: 25px;"/>
                                <field name="services" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="mechanical_works"
                                               options="{'no_create_edit': True, 'no_open': True}"/>
                                        <field name="total_hours"/>
                                        <field name="cost" invisible="1"/>
                                    </tree>
                                </field>
                                <label for="parts_required" string="SPARE PARTS"
                                       style="font-weight: bold;font-size: 25px;"/>
                                <field name="parts_required"
                                       nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"
                                               options="{'no_create_edit': True, 'no_open': True}"/>
                                        <field name="quantity"/>
                                        <field name="product_unit"
                                               options="{'no_create_edit': True, 'no_open': True}"/>
                                        <field name="cost"/>
                                    </tree>
                                </field>
                                <label for="other_cost_information" string="OTHER COST INFORMATION"
                                       style="font-weight: bold;font-size: 25px;"/>
                                <field name="other_cost_information" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="charge_description"/>
                                        <field name="charge_cost"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer">
                                    <field name="total_service_cost" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="total_parts_cost" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="total_other_cost" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <separator/>
                                    <field name="work_price" options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="initial_inspection_tree" model="ir.ui.view">
        <field name="name">initial.inspection.tree</field>
        <field name="model">initial.inspection</field>
        <field name="arch" type="xml">
            <tree string="Initial Diagnosis Report">
                <field name="name"/>
                <field name="service_deadline"/>
                <field name="customer_name"/>
                <field name="enquiry_number"/>
                <field name="machine_type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="initial_inspection_action" model="ir.actions.act_window">
        <field name="name">Initial Diagnosis Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">initial.inspection</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create new Initial Inspection
            </p>
            <p>
                Odoo helps you easily track all activities related to Initial Inspection.
            </p>
        </field>
    </record>
    <menuitem id="initial_inspection_menu" name="Initial Diagnosis Report" sequence="2"
              parent="workshop_operations" action="initial_inspection_action"/>
</odoo>