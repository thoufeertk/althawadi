<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings" model="ir.ui.view">
        <field name="name">module_name.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Workshop" string="Workshop"
                     data-key="workshop"  >
<!--                    <h2>Workshop Journal</h2>-->
<!--                    <div class="row mt16 o_settings_container">-->
<!--                        <div class="col-12 col-lg-6 o_setting_box">-->
<!--                            <div class="o_setting_right_pane">-->
<!--                                <label for="workshop_journal_id"/>-->
<!--                                <div class="text-muted">-->
<!--                                    Set default Journal for Workshop Operations-->
<!--                                </div>-->
<!--                            </div>-->
<!--                            <div class="o_setting_right_pane">-->
<!--                                <field name="workshop_journal_id"/>-->
<!--                            </div>-->
<!--                        </div>-->
<!--                    </div>-->
                    <h2>Workshop Contract Renewal</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="contract_workshop_date"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Send an automatic AMC Expire Mail Message when Date before this
                                        count
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="contract_workshop_date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="contract_workshop_amount"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Send an automatic AMC Expire Mail Message when Less than this amount
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="contract_workshop_amount"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="action_menu_workshop_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'workshop'}</field>
    </record>
    <menuitem id="workshop_configuration" name="Configuration" parent="workshop.workshop_root"
              groups="workshop.group_workshop_super_admin" sequence="16"/>
    <menuitem id="workshop_settings" name="Settings" parent="workshop_configuration"
              groups="workshop.group_workshop_super_admin" action="action_menu_workshop_config"/>
</odoo>