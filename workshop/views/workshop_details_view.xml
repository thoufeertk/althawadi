<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="workshop_details_tree" model="ir.ui.view">
        <field name="name">workshop.details.tree</field>
        <field name="model">workshop.details</field>
        <field name="arch" type="xml">
            <tree string="Workshop Details">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="workshop_details_form" model="ir.ui.view">
        <field name="name">workshop.details.form</field>
        <field name="model">workshop.details</field>
        <field name="arch" type="xml">
            <form string="Workshop Details">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description of details..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="workshop_details_menu_action" model="ir.actions.act_window">
        <field name="name">Workshop Details</field>
        <field name="res_model">workshop.details</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create new Details
            </p>
            <p>
                Odoo helps you easily track all activities related to Details.
            </p>
        </field>
    </record>
    <menuitem id="workshop_details_menu" name="Details" parent="workshop_master_data"
              groups="workshop.group_workshop_managers,workshop.group_workshop_admin_level,workshop.group_workshop_super_admin"
              action="workshop_details_menu_action" sequence="4"/>
</odoo>