<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="workshop_contract_filter" model="ir.ui.view">
        <field name="name">workshop.contract.search</field>
        <field name="model">workshop.contract</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <search string="Customer">
                <group expand="0" string="Group By">
                    <filter string="Customer" name="contract_partner_id"
                            domain="[]"
                            context="{'group_by':'contract_partner_id'}"/>
                </group>
                <filter string="State" name="state" domain="[]"
                        context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>
    <record id="workshop_contract_form" model="ir.ui.view">
        <field name="name">Contract</field>
        <field name="model">workshop.contract</field>
        <field name="arch" type="xml">
            <form string="Contract">
                <header>
                    <button string="Submit" type="object" name="action_submit"
                            states="draft" class="oe_highlight"
                             />
                    <button string="Approve" type="object" name="action_approve"
                            states="submit" class="oe_highlight"
                              />
                    <button string="Reject" type="object" name="action_reject"
                            states="submit"
                              />
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submit,running"/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button class="oe_stat_button" name="button_invoices"
                                type="object" icon="fa-pencil-square-o" attrs="{'invisible': [('invoice_count','=',0)]}">
                            <field name="invoice_count" widget="statinfo"/>
                        </button>
                    </div>

                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="contract_partner_id"
                                   string="Customer"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="original_amount"
                                   widget='monetary'
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="contract_amount"
                                   widget='monetary'
                                   options="{'currency_field': 'currency_id'}"/>
<!--                            <field name="machine"-->
<!--                                   context="{'form_view_ref': 'workshop.machine_type_form_view','default_is_machine': True,'default_type': 'service'}"/>-->
                            <field name="sale_order"/>
                            <field name="machines" widget="many2many_tags"/>
                        </group>
                        <group>
                            <label for="contract_start_date" string="Date"/>
                            <div class="o_row">
                                <field name="contract_start_date"/>
                                <i class="fa fa-long-arrow-right mx-2"
                                   aria-label="Arrow icon" title="Arrow"/>
                                <field name="contract_end_date"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="machine_service_details" string="Machine Service Details">
                            <group string="Service Details">
                                <field name="service_required" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="contract_sale_product"/>
                                        <field name="mechanical_works"/>
                                        <field name="total_hours"/>
                                        <field name="cost" sum="cost"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Parts Required">
                            <group string="Spare-Parts Details">
                                <field name="m_parts_required" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="contract_sale_product"/>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="product_unit"/>
                                        <field name="cost"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>
    <record id="workshop_contract_tree" model="ir.ui.view">
        <field name="name">workshop.contract.tree</field>
        <field name="model">workshop.contract</field>
        <field name="arch" type="xml">
            <tree string="Work Order">
                <field name="name"/>
                <field name="contract_partner_id"/>
                <field name="contract_start_date"/>
                <field name="contract_end_date"/>
                <field name="contract_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="workshop_contract_action" model="ir.actions.act_window">
        <field name="name">Contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">workshop.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create new Annual Contract
            </p>
            <p>
                Odoo helps you easily track all activities of Annual Contract.
            </p>
        </field>
    </record>
    <menuitem id="contract_menu" name="Contract" groups="workshop.group_workshop_admin_level,workshop.group_workshop_super_admin"
              parent="workshop_master_data" action="workshop_contract_action" sequence="8"/>
</odoo>