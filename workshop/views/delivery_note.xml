<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="delivery_note_filter" model="ir.ui.view">
        <field name="name">delivery.note.search</field>
        <field name="model">delivery.note</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <search string="Customer">
                <field name="delivery_note_date"/>
                <field name="delivery_note_no"/>
                <filter string="Today" name="workshop_timesheet_date"
                        domain="[('delivery_note_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('delivery_note_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Month" name="current_month"
                        domain="[('delivery_note_date','&gt;=',context_today().strftime('%%Y-%%m-01')),('delivery_note_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                <filter string="Next Month" name="next_month"
                        domain="[('delivery_note_date','&gt;=',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')),('delivery_note_date','&lt;',(context_today()+relativedelta(months=2)).strftime('%%Y-%%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="customer_name" domain="[]" context="{'group_by':'customer_name'}"/>
                </group>
                <filter string="State" name="state" domain="[]"
                        context="{'group_by':'state'}"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
            </search>
        </field>
    </record>
    <record id="delivery_note_form" model="ir.ui.view">
        <field name="name">Delivery Note</field>
        <field name="model">delivery.note</field>
        <field name="arch" type="xml">
            <form string="Delivery Note">
                <header>
                    <button name="validate" class="btn-primary" type="object"
                            string="Validate" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <!--                    <button name="form_invoice" class="btn-primary" type="object"-->
                    <!--                            string="Create Invoice" attrs="{'invisible': [('state', '!=', 'pending')]}"/>-->
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,invoiced"/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button class="oe_stat_button" name="button_sale" type="object" icon="fa-pencil-square-o">
                            <field name="sale_count" widget="statinfo" string="Sale Order"/>
                        </button>
                    </div>
                    <h1>
                        <field name="delivery_note_no" readonly="1"/>
                    </h1>
                    <group>
                        <div>
                            <group>
                                <group>
                                    <field name="customer_name" options="{'no_create_edit': True}"
                                           attrs="{'readonly': [('state', '=','invoiced')]}"/>
                                    <field name="sale_order"
                                           attrs="{'readonly': [('state', '=','invoiced')]}"/>

                                </group>
                                <group>
                                    <field name="show_price"/>
                                    <field name="delivery_note_date"
                                           attrs="{'readonly': [('state', '=','invoiced')]}"/>
                                    <field name="purchase_date" attrs="{'readonly': [('state', '=','invoiced')]}"/>
                                </group>
                                <group>
                                    <field name="job_reference" options="{'no_create_edit': True}"
                                           attrs="{'readonly': [('state', '=','invoiced')]}"/>
                                </group>
                            </group>
                        </div>
                    </group>
                    <div>
                        <field name="delivery_note_line"
                               widget="section_and_note_one2many"
                               mode="tree" nolabel="1">
                            <tree editable="bottom" string="Quotation Items">
                                <control>
                                    <create name="add_line_control" string="Add a line"/>
                                    <create name="add_section_control" string="Add a section"
                                            context="{'default_display_type': 'line_section'}"/>
                                    <create name="add_note_control" string="Add a note"
                                            context="{'default_display_type': 'line_note'}"/>
                                </control>
                                <!-- Displayed fields -->
                                <field name="display_type" invisible="1"/>
                                <field name="product_id"
                                       attrs="{'required': [('display_type', '=', False)]}"/>
                                <field name="name" widget="section_and_note_text"/>
                                <field name="price_unit"/>
                                <field name="product_uom"/>
                                <field name="product_uom_qty"/>
                                <field name="discount"/>
                                <field name="tax_id" widget="many2many_tags"/>
                                <field name="price_subtotal"/>
                                <field name="price_tax"/>
                                <field name="price_total"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="delivery_note_tree" model="ir.ui.view">
        <field name="name">delivery.note.tree</field>
        <field name="model">delivery.note</field>
        <field name="arch" type="xml">
            <tree string="Delivery Note">
                <field name="delivery_note_date"/>
                <field name="delivery_note_no"/>
                <field name="customer_name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="delivery_note_action" model="ir.actions.act_window">
        <field name="name">Delivery Note</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">delivery.note</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_customer_name': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create new Delivery Note
            </p>
            <p>
                Odoo helps you easily track all activities related to Delivery Note.
            </p>
        </field>
    </record>
    <menuitem id="delivery_note_menu" name="Delivery Note"
              parent="workshop_work_orders" sequence="9" action="delivery_note_action"/>
</odoo>