<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="workshop_quotation_filter" model="ir.ui.view">
            <field name="name">workshop.quotation.search</field>
            <field name="model">workshop.quotation</field>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <search string="Customer">
                    <field name="quote_date"/>
                    <field name="validity_date"/>
                    <field name="customer_name"/>
                    <field name="machine_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="customer_name" domain="[]"
                                context="{'group_by':'customer_name'}"/>
                    </group>
                    <filter string="State" name="state" domain="[]"
                            context="{'group_by':'state'}"/>
                    <filter string="Submitted" name="submitted" domain="[('state', '=', 'submit')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                </search>
            </field>
        </record>
        <record id="workshop_quotation_form" model="ir.ui.view">
            <field name="name">Workshop Quotation</field>
            <field name="model">workshop.quotation</field>
            <field name="arch" type="xml">
                <form string="Workshop Quotation">
                    <header>
                        <field name="sale_order_id" invisible="1"/>
                        <button name="validate" class="btn-primary" type="object"
                                string="Validate" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="generate_sale_order" class="btn-primary" type="object"
                                string="Generate Sale Order"
                                attrs="{'invisible': ['|',('state', 'in', ('draft', 'rejected', 'pending', 'submit')),('sale_order_id', '!=', False)]}"/>
                        <field name="state" widget="statusbar" class="oe_highlight"
                               statusbar_visible="draft,submit,approved,rejected,done"/>
                        <button name="approve" type="object" class="oe_highlight" string="Approve"
                                attrs="{'invisible': [('state','!=','submit')]}"/>

                        <button name="reject" type="object" class="oe_highlight" string="Reject"
                                attrs="{'invisible': [('state','!=','submit')]}"/>

                        <button name="set_to_draft" type="object" class="oe_highlight" string="Set to Draft"
                                attrs="{'invisible': [('state','=','draft')]}"/>

                        <button name="workorder" type="object" string="Create Workorder" class="btn-primary"
                                attrs="{'invisible': [('state','!=','approved')]}"/>

                        <button name="send_by_mail" type="object" string="Send Mail" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button class="oe_stat_button" name="button_work_order"
                                    type="object" icon="fa-pencil-square-o"
                                    attrs="{'invisible': [('work_order_count', '=', 0)]}">
                                <field name="work_order_count" widget="statinfo" string="Work Order"/>
                            </button>
                            <button class="oe_stat_button" name="button_sale_order"
                                    type="object" icon="fa-pencil-square-o" string="Sale Orders"
                                    attrs="{'invisible': [('sale_order_id', '=', False)]}">
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <label for="company_street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="company_street" placeholder="Street..." class="o_address_street"/>
                                    <field name="company_street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="company_city" placeholder="City" class="o_address_city"/>
                                    <field name="company_state" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="company_zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="company_country" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group>
                                <field name="customer_name"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="city" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="quote_date"/>
                                <div>
                                    <field name="validity_date" class="oe_inline" nolabel="1"/>
                                    days
                                </div>
                            </group>
                            <group>
                                <field name="quote_address_person"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="scope_of_work"/>
                                <field name="scope_of_work_description"/>
                            </group>
                            <group>
                                <field name="machine_id" attrs="{'invisible': [('machine_id', '=', False)]}"/>
                                <field name="made" attrs="{'invisible': [('made', '=', False)]}"/>
                                <field name="make" attrs="{'invisible': [('make', '=', False)]}"/>
                                <field name="kilo" attrs="{'invisible': [('kilo', '=', False)]}"/>
                                <field name="kva" attrs="{'invisible': [('kva', '=', False)]}"/>
                                <field name="horsepower" attrs="{'invisible': [('horsepower', '=', False)]}"/>
                                <field name="machine_serial_number"
                                       attrs="{'invisible': [('machine_serial_number', '=', False)]}"/>
                                <field name="item_code" attrs="{'invisible': [('item_code', '=', False)]}"/>
                                <field name="rpm" attrs="{'invisible': [('rpm', '=', False)]}"/>
                                <field name="pole" attrs="{'invisible': [('pole', '=', False)]}"/>
                                <field name="volt" attrs="{'invisible': [('volt', '=', False)]}"/>
                                <field name="amps" attrs="{'invisible': [('amps', '=', False)]}"/>
                                <field name="hertz" attrs="{'invisible': [('hertz', '=', False)]}"/>
                                <field name="motor_no" attrs="{'invisible': [('motor_no', '=', False)]}"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <div>
                            <label for="work_quotation_line_ids" string="Quotation Summary"
                                   style="font-weight: bold;font-size: 18px;"/>
                            <field name="work_quotation_line_ids"
                                   widget="section_and_note_one2many"
                                   mode="tree" nolabel="1">
                                <tree editable="bottom" string="Quotation Items">
                                    <control>
                                        <create name="add_line_control" string="Add a line"/>
                                        <create name="add_section_control" string="Add a section"
                                                context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note"
                                                context="{'default_display_type': 'line_note'}"/>
                                    </control>
                                    <!-- Displayed fields -->
                                    <field name="display_type" invisible="1"/>
                                    <field name="product_id" attrs="{'required': [('display_type', '=', False)]}"/>
                                    <field name="name" widget="section_and_note_text"/>
                                    <field name="price_unit"/>
                                    <field name="product_uom"/>
                                    <field name="product_uom_qty"/>
                                    <field name="discount"/>
                                    <field name="tax_id" widget="many2many_tags"/>
                                    <field name="price_subtotal"/>
                                    <field name="price_tax"/>
                                    <field name="price_total"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6">
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="amount_untaxed" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_tax" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator"
                                           widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </div>
                        <group>
                            <group>
                                <field name="signed_name"/>
                                <field name="telephone"/>
                                <field name="price" invisible="1"/>
                                <field name="digital_signature" widget="signature"/>
                            </group>
                        </group>
                        <div>
                            <label for="parts_required" string="Spare Parts"
                                   style="font-size: 18px;"/>
                            <field name="parts_required" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create_edit': True, 'no_open': True}"/>
                                    <field name="quantity"/>
                                    <field name="product_unit" options="{'no_create_edit': True, 'no_open': True}"/>
                                    <field name="cost"/>
                                </tree>
                            </field>
                        </div>
                        <div>
                            <label for="services" string="Services" style="font-size: 18px;"/>
                            <field name="services" nolabel="1">
                                <tree editable="bottom">
                                    <field name="mechanical_works" options="{'no_create_edit': True, 'no_open': True}"/>
                                    <field name="total_hours"/>
                                    <field name="cost" invisible="1"/>
                                </tree>
                            </field>
                        </div>
                        <div>
                            <label for="other_cost_information" string="Other Cost Information"
                                   style="font-size: 18px;"/>
                            <field name="other_cost_information" nolabel="1">
                                <tree editable="bottom">
                                    <field name="charge_description"/>
                                    <field name="charge_cost"/>
                                </tree>
                            </field>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="workshop_quotation_tree" model="ir.ui.view">
            <field name="name">workshop.quotation.tree</field>
            <field name="model">workshop.quotation</field>
            <field name="arch" type="xml">
                <tree string="Workshop Quotation">
                    <field name="quote_date"/>
                    <field name="name"/>
                    <field name="customer_name"/>
                    <field name="pending_enquiry"/>
                    <field name="validity_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="workshop_quotation_action" model="ir.actions.act_window">
            <field name="name">Workshop Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">workshop.quotation</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click here to create new Work Quotation
                </p>
                <p>
                    Odoo helps you easily track all activities related to Work Quotation.
                </p>
            </field>
        </record>
        <menuitem id="workshop_quotation_menu" name="Quotation"
                  parent="workshop_work_orders" action="workshop_quotation_action" sequence="6"/>
    </data>
</odoo>