<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="workshop_order_filter" model="ir.ui.view">
        <field name="name">workshop.order.search</field>
        <field name="model">workshop.order</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <search string="Customer">
                <field name="order_date"/>
                <field name="name"/>
                <field name="customer_name"/>
                <filter string="Today" name="workshop_timesheet_date"
                        domain="[('order_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('order_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Month" name="current_month"
                        domain="[('order_date','&gt;=',context_today().strftime('%%Y-%%m-01')),('order_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                <filter string="Next Month" name="next_month"
                        domain="[('order_date','&gt;=',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')),('order_date','&lt;',(context_today()+relativedelta(months=2)).strftime('%%Y-%%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="customer_name" domain="[]" context="{'group_by':'customer_name'}"/>
                </group>
                <filter string="State" name="state" domain="[]"
                        context="{'group_by':'state'}"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Running" name="running" domain="[('state', '=', 'running')]"/>
                <filter string="Submit" name="submit" domain="[('state', '=', 'submit')]"/>
                <filter string="Approve" name="approve" domain="[('state', '=', 'approve')]"/>
                <filter string="Reject" name="reject" domain="[('state', '=', 'reject')]"/>
                <filter string="Waiting" name="waiting" domain="[('state', '=', 'waiting')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>

            </search>
        </field>
    </record>
    <record id="workshop_order_form" model="ir.ui.view">
        <field name="name">Work Order</field>
        <field name="model">workshop.order</field>
        <field name="arch" type="xml">
            <form string="Work Order">
                <header>
                    <button name="validate" class="btn-primary" type="object"
                            string="Validate" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="workshop_delivery_note" class="btn-primary" type="object"
                            string="Create Delivery Note" attrs="{'invisible': [('state', '!=', 'approve')]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,running,submit,approve"/>
                    <!--timesheet-->
                    <button name="work_start" string="Start" states="pending" type="object"/>
                    <field name="remove_check_button" invisible="1"/>
                    <button name="check_parts_availability" string="Check Availability"
                            attrs="{'invisible': ['|',
                            ('state', 'not in', ('pending', 'running')),
                            ('remove_check_button','=',True)
                            ]}"
                            type="object" class="oe_highlight"/>
                    <button name="work_submit" string="Submit" type="object"
                            attrs="{'invisible': [('state','!=','running')]}"/>
                    <button name="work_approve" string="Approve" states="submit" type="object"
                    />
                    <button name="work_reject" string="Reject" states="submit" type="object"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button class="oe_stat_button" name="button_workshop_task"
                                attrs="{'invisible': [('state', 'in',['pending','draft'])]}"
                                type="object" icon="fa-pencil-square-o">Tasks
                        </button>
                        <button class="oe_stat_button" name="button_delivery_note"
                                type="object" icon="fa-pencil-square-o"
                                attrs="{'invisible': [('delivery_note_count', '=', 0)]}">
                            <field name="delivery_note_count" widget="statinfo"
                                   string="Delivery Note"/>
                        </button>
                        <button type="object" name="action_view_material_request" class="oe_stat_button"
                                icon="fa-file"
                                attrs="{'invisible':[('material_request_count', '=', 0)]}">
                            <field name="material_request_count" widget="statinfo" string="Material Request"/>
                        </button>
                    </div>
                    <div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <div>
                                <group>
                                    <group>
                                        <field name="customer_name" options="{'no_create_edit': True}"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="order_priority"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="workshop_picking_id" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="pending_enquiry" options="{'no_create_edit': True}"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="initial_inspection" options="{'no_create_edit': True}"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="order_date"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <label for="warranty_days" string="Warranty"/>
                                        <div>
                                            <field name="warranty_days" class="oe_inline" nolabel="1"/>
                                            days
                                        </div>
                                    </group>
                                </group>
                            </div>
                        </group>
                    </div>
                    <notebook>
                        <page string="Machine details">
                            <group>
                                <group>
                                    <field name="category" attrs="{'invisible': [('category', '=', False)]}"/>
                                    <field name="made" attrs="{'invisible': [('made', '=', False)]}"/>
                                    <field name="kilo" attrs="{'invisible': [('kilo', '=', False)]}"/>
                                    <field name="kva" attrs="{'invisible': [('kva', '=', False)]}"/>
                                    <field name="horsepower" attrs="{'invisible': [('horsepower', '=', False)]}"/>
                                    <field name="machine_serial_number" attrs="{'invisible': [('machine_serial_number', '=', False)]}"/>
                                    <field name="amc_customer" invisible="1"/>
                                    <field name="item_code" attrs="{'invisible': [('amc_customer', '=', False)]}"/>
                                    <field name="rpm" attrs="{'invisible': [('rpm', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="pole" attrs="{'invisible': [('pole', '=', False)]}"/>
                                    <field name="volt" attrs="{'invisible': [('volt', '=', False)]}"/>
                                    <field name="amps" attrs="{'invisible': [('amps', '=', False)]}"/>
                                    <field name="hertz" attrs="{'invisible': [('hertz', '=', False)]}"/>
                                    <field name="motor_no" attrs="{'invisible': [('motor_no', '=', False)]}"/>
                                    <field name="make" attrs="{'invisible': [('make', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parts Required">
                            <field name="parts_required"
                                   attrs="{'readonly': [('state', 'not in', ('draft','waiting_material'))]}">
                                <tree editable="bottom" decoration-danger="state not in ['assigned', 'done']"
                                      multi_edit="1">
                                    <field name="product_id"/>
                                    <field name="name" invisible="1"/>
                                    <field name="picking_type_id" optional="hide"/>
                                    <field name="product_uom" invisible="1"/>
                                    <field name="location_id" optional="hide"/>
                                    <field name="location_dest_id" optional="hide"/>
                                    <field name="product_uom_qty" string="Quantity"/>
                                    <field name="reserved_availability" string="Reserved"/>
                                    <!--                                    <field name="price_unit" string="Price"/>-->
                                    <field name="quantity_done" optional="hide"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="picking_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Technician Details">
                            <field name="technician_ids">
                                <tree editable="bottom">
                                    <field name="workshop_order_id" invisible="1"/>
                                    <field name="job"/>
                                    <field name="technician_id" attrs="{'required': [('job', '!=', False)]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="workshop_order_tree" model="ir.ui.view">
        <field name="name">workshop.order.tree</field>
        <field name="model">workshop.order</field>
        <field name="arch" type="xml">
            <tree string="Work Order">
                <field name="order_date"/>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="initial_inspection"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="workshop_order_action" model="ir.actions.act_window">
        <field name="name">Work Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">workshop.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create new Work Order
            </p>
            <p>
                Odoo helps you easily track all activities related to Work Order.
            </p>
        </field>
    </record>
    <menuitem id="workshop_order_menu" name="Work Order"
              parent="workshop_work_orders" action="workshop_order_action" sequence="4"/>
</odoo>