<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_workshop_location" model="ir.ui.view">
        <field name="name">product.template.form.workshop.location</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='stock_property']" position="inside">
                <field name="workshop_stock_location"/>
            </xpath>

        </field>
    </record>
</odoo>