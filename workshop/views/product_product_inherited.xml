<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="machine_tree_view" model="ir.ui.view">
            <field name="name">product.template.inherited.machine.tree</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Machine">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="horsepower"/>
                    <field name="machine_serial_number"/>
                    <field name="item_code"/>
                    <field name="rpm"/>


                </tree>
            </field>
        </record>
        <record id="machine_variant_tree_view" model="ir.ui.view">
            <field name="name">product.product.inherited.machine.tree</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree string="Machine">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="horsepower"/>
                    <field name="machine_serial_number"/>
                    <field name="item_code"/>
                    <field name="rpm"/>
                </tree>
            </field>
        </record>

        <record id="workshop_machine_action" model="ir.actions.act_window">
            <field name="context">{'default_type': 'service', 'default_is_machine': True}</field>
            <field name="name">Machines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_machine', '!=', False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('workshop.machine_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('workshop.machine_type_form_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click here to create new Machines
                </p>
                <p>
                    Odoo helps you easily track all activities related to Machines
                </p>
            </field>
        </record>
        <record id="workshop_machine_variant_action" model="ir.actions.act_window">
            <field name="context">{'default_type': 'service', 'default_is_machine': True}</field>
            <field name="name">Machines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_machine', '!=', False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('workshop.machine_variant_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('workshop.machine_variant_type_form_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click here to create new Machines
                </p>
                <p>
                    Odoo helps you easily track all activities related to Machines
                </p>
            </field>
        </record>

        <record id="service_tree_view" model="ir.ui.view">
            <field name="name">product.product.inherited.service.tree</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree string="Service">
                    <field name="name"/>
                    <field name="lst_price"/>
                </tree>
            </field>
        </record>
        <record id="workshop_service_action" model="ir.actions.act_window">
            <field name="context">{'default_type': 'service','default_is_workshop_service': True}</field>
            <field name="name">Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_workshop_service', '=', True),('type','=','service')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('workshop.service_tree_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click here to create new Workshop Services
                </p>
                <p>
                    Odoo helps you easily track all activities related to Workshop Services
                </p>
            </field>
        </record>
        <menuitem id="workshop_machine_menu" name="Machines" parent="workshop.workshop_master_data"
                  groups="workshop.group_workshop_engineers,workshop.group_workshop_managers,workshop.group_workshop_super_admin,workshop.group_workshop_admin_level"
                  action="workshop_machine_action" sequence="2"/>
        <menuitem id="workshop_machine_variant_menu" name="Machine Variant"
                  parent="workshop.workshop_master_data"
                  groups="workshop.group_workshop_engineers,workshop.group_workshop_managers,workshop.group_workshop_super_admin,workshop.group_workshop_admin_level"
                  action="workshop_machine_variant_action" sequence="3"/>
        <menuitem id="workshop_services_menu" name="Services" parent="workshop.workshop_master_data"
                  groups="workshop.group_workshop_engineers,workshop.group_workshop_managers,workshop.group_workshop_super_admin,workshop.group_workshop_admin_level"
                  action="workshop_service_action" sequence="7"/>
    </data>
</odoo>