<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="workshop_delivery_invoice" model="ir.ui.view">
        <field name="name">Contract</field>
        <field name="model">delivery.invoices</field>
        <field name="arch" type="xml">
            <form string="Create Invoices">
                <form class="o_form_label">This action will create invoice for the selected delivery notes.</form>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button type="object" name="create_invoices_action" class="btn-primary" string="Create Invoices"/>
                    <button type="object" name="create_view_invoices_action" class="btn-primary"
                            string="Create and View Invoices"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="multi_invoices_action" model="ir.actions.server">
        <field name="name">Create Invoices</field>
        <field name="model_id" ref="workshop.model_delivery_note"/>
        <field name="binding_model_id" ref="workshop.model_delivery_note"/>
        <field name="state">code</field>
        <field name="code">action = model.create_invoices()</field>
    </record>
</odoo>
