<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="timesheet_workshop" model="ir.ui.view">
            <field name="name">timesheet.form.inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timesheet_ids']/tree/field[@name='name']" position="replace">
                    <field name="name" attrs="{'column_invisible': [('parent.workshop_workorder', '!=', False)]}"/>
                    <field name="workshop_description" options="{'no_open': True,'no_create_edit':True}"
                           attrs="{'column_invisible': [('parent.workshop_workorder', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="replace">
                      <field name="employee_id" required="1" options="{'no_open': True,'no_create_edit':True}"/>
                </xpath>
                <field name="user_ids" position="after">
                    <field name="workshop_workorder" attrs="{'invisible': [('workshop_workorder', '=', False)]}"/>
                </field>
            </field>
        </record>

        <record id="workshop_timesheet" model="ir.actions.act_window">
            <field name="name">Timesheets</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">grid,tree</field>
            <field name="domain">[('task_id.workshop_workorder','!=',False)]</field>
            <field name="context">{'create': False}</field>
            <field name="target">current</field>
        </record>
        <menuitem id="menu_workshop_attendance" name="Attendance"
                  groups="workshop.group_workshop_data_entry_user,workshop.group_workshop_super_admin,workshop.group_workshop_admin_level" parent="workshop_root"/>
        <menuitem id="menu_workshop_timesheet" name="Timesheet" parent="menu_workshop_attendance"
                  groups="workshop.group_workshop_data_entry_user,workshop.group_workshop_super_admin,workshop.group_workshop_admin_level" action="workshop_timesheet"/>
    </data>
</odoo>