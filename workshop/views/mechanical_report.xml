<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mechanical_report_filter" model="ir.ui.view">
        <field name="name">mechanical.report.search</field>
        <field name="model">mechanical.report</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <search string="Customer">
                <field name="customer_name" string="Customer" filter_domain="[('customer_name','ilike',self)]"/>
                <field name="report_date" string="Date" filter_domain="[('report_date','ilike',self)]"/>
                <field name="machine_type" string="Machine Type" filter_domain="[('machine_type','ilike',self)]"/>
                <field name="job_no" string="Inspection" filter_domain="[('job_no','ilike',self)]"/>
                <filter string="Today" name="workshop_timesheet_date"
                        domain="[('report_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('report_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Month" name="current_month"
                        domain="[('report_date','&gt;=',context_today().strftime('%%Y-%%m-01')),('report_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                <filter string="Next Month" name="next_month"
                        domain="[('report_date','&gt;=',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')),('report_date','&lt;',(context_today()+relativedelta(months=2)).strftime('%%Y-%%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="customer_name" domain="[]" context="{'group_by':'customer_name'}"/>
                </group>
                <filter string="Machine Type" name="machine_type" domain="[]"
                        context="{'group_by':'machine_type'}"/>
            </search>
        </field>
    </record>
    <record id="mechanical_report_form" model="ir.ui.view">
        <field name="name">Mechanical Report</field>
        <field name="model">mechanical.report</field>
        <field name="arch" type="xml">
            <form string="Mechanical Report">
                <header>
                    <field name="amc_customer" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    <button name="validate" class="btn-primary" type="object"
                            string="Validate" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="create_quotation" class="btn-primary" string="Create Quotation" type="object"
                            attrs="{'invisible': ['|',('amc_customer', '=', True), ('state', '=', 'draft')]}"/>
                    <button name="create_work_order" class="btn-primary"
                            attrs="{'invisible': ['|',('amc_customer', '=', False), ('state', '=', 'draft')]}"
                            string="Create Workorder"
                            type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button class="oe_stat_button" name="button_quotation"
                                type="object" icon="fa-pencil-square-o"
                                attrs="{'invisible': [('quotation_count', '=', 0)]}">
                            <field name="quotation_count" widget="statinfo" string="Quotation"/>
                        </button>
                    </div>
                    <div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <div>
                            <group>
                                <group>
                                    <field name="customer_name" options="{'no_create_edit': True}"
                                    />
                                </group>
                                <group>
                                    <field name="report_date"/>
                                    <field name="job_no" options="{'no_create_edit': True}"
                                    />
                                </group>
                            </group>
                        </div>
                        <div>
                            <group>
                                <group>
                                    <group>
                                        <field name="notification_no"/>

                                        <field name="machine_type" options="{'no_create_edit': True}"

                                               context="{'form_view_ref': 'workshop.machine_type_form_view','default_is_machine': True,'default_type': 'service'}"/>
                                        <field name="quantity" invisible="1"/>

                                    </group>
                                    <group>
                                        <field name="motor_no"/>

                                        <field name="end_user"/>

                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="overhauling"/>
                                        <field name="machine_serial_number"
                                        />
                                    </group>
                                    <group>
                                        <field name="rewinding"/>

                                        <field name="item_code" attrs="{'invisible': [('amc_customer', '=', False)]}"/>
                                    </group>
                                </group>
                            </group>
                        </div>
                    </div>
                    <div>
                        <group>
                            <group>
                                <group>
                                    <field name="horsepower"/>
                                    <field name="make"/>
                                    <field name="item_code"/>

                                    <field name="volt"/>
                                </group>
                                <group>
                                    <field name="pole"/>
                                    <field name="made"/>
                                    <field name="amps"/>
                                    <field name="motor_no"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="kilo"/>
                                    <field name="kva"/>
                                    <field name="rpm"/>
                                </group>
                                <group>
                                    <field name="frame"/>
                                    <field name="hertz"/>
                                </group>
                            </group>
                        </group>

                    </div>
                    <notebook>
                        <page string="Data">
                            <group>
                                <group>
                                    <h2>Stator Data</h2>
                                    <field name="slots"/>
                                    <field name="core_length"/>
                                    <field name="core_diameter"/>
                                    <field name="groups_no"/>
                                    <field name="coils_group"/>
                                    <field name="turns"/>
                                    <field name="parallel_wires"/>
                                    <field name="connection_overhang"/>
                                    <field name="non_connection_end_overhang"
                                    />
                                    <field name="pitch"/>
                                    <field name="wire_size"/>
                                    <!--<group>-->
                                    <field name="changed_to"/>
                                    <field name="winding_taken_by"/>
                                    <!--</group>-->
                                    <h2>Rotor Data</h2>
                                    <field name="rotor_bars"/>
                                    <field name="rotor_dia"/>
                                    <field name="shaft_length"/>
                                    <field name="no_of_steps"/>
                                    <field name="de_journal_dia"/>
                                    <field name="nde_journal_dia"/>

                                </group>
                                <group>
                                    <h2>Fan Data</h2>
                                    <field name="fan_type"/>
                                    <field name="blades_no"/>
                                    <field name="fan_key_size"/>
                                    <h2>End Cover Data</h2>
                                    <field name="end_cover_de"/>
                                    <field name="end_cover_nde"/>
                                    <field name="oil_seed_de"/>
                                    <field name="oil_seed_nde"/>
                                    <field name="wave_spring"/>
                                    <h2>Bearing Data</h2>
                                    <field name="bearing_de_no"/>
                                    <field name="bearing_nde_no"/>
                                    <h2>Clearance and Fits</h2>
                                    <field name="shaft_de_cover"/>
                                    <field name="shaft_nde_cover"/>
                                    <h2>Coupling and Pulley</h2>
                                    <field name="coupling_pully"/>
                                    <field name="coupling_bore"/>
                                    <field name="coupling_key_size"/>
                                    <field name="defects"/>
                                    <field name="inspection_by"/>
                                    <field name="other_by"/>
                                </group>
                            </group>
                            <label for="action_todo"/>
                            <field name="action_todo"/>
                            <group col="4">
                                <field name="mechanical_inspection_by" colspan="3"
                                />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="mechanical_report_tree" model="ir.ui.view">
        <field name="name">mechanical.report.tree</field>
        <field name="model">mechanical.report</field>
        <field name="arch" type="xml">
            <tree string="Mechanical Report">
                <field name="report_date"/>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="machine_type"/>
                <field name="job_no"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="mechanical_report_action" model="ir.actions.act_window">
        <field name="name">Mechanical Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mechanical.report</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create new Mechanical Report
            </p>
            <p>
                Odoo helps you easily track all activities related to Mechanical Report.
            </p>
        </field>
    </record>
    <menuitem id="mechanical_report_menu" name="Mechanical Report"
              parent="workshop_operations" action="mechanical_report_action"/>
</odoo>