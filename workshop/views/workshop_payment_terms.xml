<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="workshop_payment_terms_tree" model="ir.ui.view">
        <field name="name">workshop.payment.terms.tree</field>
        <field name="model">workshop.payment.terms</field>
        <field name="arch" type="xml">
            <tree string="Payment Terms">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="workshop_payment_terms_form" model="ir.ui.view">
        <field name="name">workshop.payment.terms.form</field>
        <field name="model">workshop.payment.terms</field>
        <field name="arch" type="xml">
            <form string="Payment Terms">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description of Payment Terms..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="workshop_payment_terms_menu_action" model="ir.actions.act_window">
        <field name="name">Payment Terms</field>
        <field name="res_model">workshop.payment.terms</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create new Payment Terms
            </p>
            <p>
                Odoo helps you easily track all activities related to Payment Terms.
            </p>
        </field>
    </record>
    <menuitem id="workshop_payment_terms_menu" name="Payment Terms" parent="workshop_master_data"
              groups="workshop.group_workshop_managers,workshop.group_workshop_admin_level,workshop.group_workshop_super_admin"
              action="workshop_payment_terms_menu_action" sequence="4"/>
</odoo>