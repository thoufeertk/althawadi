<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="contract_view_form" model="ir.ui.view">
        <field name="name">contract wizard</field>
        <field name="model">contract.wizard</field>
        <field name="arch" type="xml">
            <form string="Contract Report">
                <group>
                   <group>
                     <field name="expiry" widget="radio"/>
                   </group>
                  <group>

                    <field name="days" attrs="{'invisible': [('expiry', '=', 'amc_amount')]}"/>
                    <field name="amc_amount" attrs="{'invisible': [('expiry', '=', 'expires_within')]}"/>
                </group>
                </group>
                        <footer>
                            <button name="print_pdf" string="PRINT PDF" type="object" class="oe_highlight" action="workshop_view_form"/>
                            <button string="Cancel" class="btn btn-default" type="object" special="cancel"/>
                        </footer>
            </form>
        </field>
    </record>

    <record id="amc_wizard_action" model="ir.actions.act_window">
        <field name="name">AMC Contract Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="contract_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="amc_menu" name="AMC Report" parent="report_menu"
              groups="workshop.group_workshop_supervisors,workshop.group_workshop_engineers,workshop.group_workshop_managers,workshop.group_workshop_admin_level,workshop.group_workshop_super_admin"
              action="amc_wizard_action"/>
</odoo>