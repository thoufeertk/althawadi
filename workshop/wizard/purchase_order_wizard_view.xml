<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_workshop_purchase_order_wizard" model="ir.ui.view">
            <field name="name">view.workshop.purchase.order.wizard</field>
            <field name="model">create.workshop.purchase</field>
            <field name="arch" type="xml">
                <form string="Purchase Order">
                    <p class="oe_grey"/>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="origin"/>
                        </group>
                    </group>
                    <group>
                        <field name="order_line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="product_uom"/>
                                <field name="product_price_unit"/>
                                <field name="price_subtotal"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="create_purchase" type="object" string="Create Purchase Order"
                                class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>