<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="workshop_delivery_note">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <h2 align="center">Delivery Note<br/>
                            <t t-esc="doc.delivery_note_no"/>
                        </h2>
                        <div class="row mt32">
                            <div class="col-xs-3">
                                <strong>Date:</strong>
                                <t t-esc="doc.delivery_note_date"/>
                            </div>
                            <br/>
                        </div>
                        <div class="row mt32">
                            <div class="col-xs-3">
                                <strong>Customer:</strong>
                                <t t-esc="doc.customer_name.name"/>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <table border="1" class="table table-condensed" style="border-style:solid">
                        <thead>
                            <tr align="left">
                                <th>Machine Details</th>
                                <th>Service Details</th>
                                <t t-if="doc.show_price">
                                    <th>Unit Price</th>
                                </t>
                                <th>Unit Of Measure</th>
                                <th>Quantity</th>
                                <t t-if="doc.show_price">
                                    <th>Discount</th>
                                    <th>Subtotal</th>
                                    <th>Total Tax</th>
                                    <th>Total</th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.delivery_note_line" t-as="line">
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td align="left">
                                            <span t-esc="line.product_id.name"/>
                                        </td>
                                        <td align="left">
                                            <span t-esc="line.name"/>
                                        </td>
                                        <t t-if="doc.show_price">
                                            <td align="left">
                                                <span t-esc="line.price_unit"/>
                                            </td>
                                        </t>
                                        <td align="left">
                                            <span t-esc="line.product_uom.name"/>
                                        </td>
                                        <td align="left">
                                            <span t-esc="line.product_uom_qty"/>
                                        </td>
                                        <t t-if="doc.show_price">
                                            <td align="left">
                                                <span t-esc="line.discount"/>
                                            </td>
                                            <td align="left">
                                                <span t-esc="line.price_subtotal"/>
                                            </td>
                                            <td align="left">
                                                <span t-esc="line.price_tax"/>
                                            </td>
                                            <td align="left">
                                                <span t-esc="line.price_total"/>
                                            </td>
                                        </t>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>
