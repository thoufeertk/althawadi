<odoo>
    <data>
        <record model="ir.ui.view" id="res_company_form_view_inherit">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Report Cofiguration">
                        <group string="Report Logo">
                            <group>
                                <div style="width:100px;">
                                    <field name="header_image" widget="image" options="{'size': [100, 100]}"
                                           type="base64"/>
                                    <field name="footer_image" widget="image" options="{'size': [100, 100]}"
                                           type="base64"/>
                                </div>
                            </group>
                        </group>
                        <group string="Stamp">
                            <group>
                                <div style="width:100px;">
                                    <field name="stamp_image" widget="image" options="{'size': [100, 100]}"
                                           type="base64"/>
                                </div>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

