<odoo>

    <template id="external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[@class='col-3 mb4']" position="replace">
            <div class="col-3 mb4">
                <t t-if="company">
                    <t t-if="company.header_image">
                        <img t-if="company.header_image" t-att-src="image_data_uri(company.header_image)" alt="Logo"
                             style="margin-left:-5px;height:150px; width:900px;"/>
                    </t>

                    <t t-if="not company.header_image">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </t>
                </t>
            </div>
        </xpath>
        <xpath expr="//div[@class='col-12']" position="replace">
            <div class="col-12">

            </div>

        </xpath>

        <xpath expr="//ul[@class='list-inline mb4']" position="replace">
            <ul class="list-inline mb4">
                <t t-if="company.footer_image">
                    <div class="center">
                        <img t-if="company.footer_image" t-att-src="image_data_uri(company.footer_image)" alt="Logo"
                             style=" margin-left:-20px;height:150px; width:900px; "/>

                    </div>
                </t>
            </ul>
        </xpath>
    </template>

</odoo>