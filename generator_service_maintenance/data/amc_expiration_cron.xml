<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--Cron job for checking the expiry date for the annual maintenance contract-->
        <record id="ir_cron_annual_maintenance_service_expired" model="ir.cron">
            <field name="name">Action For Annual Maintenance Contract Expired</field>
            <field name="model_id" ref="model_annual_maintenance_contract"/>
            <field name="state">code</field>
            <field name="code">model.service_expired()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="ir_cron_annual_maintenance_calculate_expiration" model="ir.cron">
            <field name="name">Remainder for annual contract renewal</field>
            <field name="model_id" ref="model_annual_maintenance_contract"/>
            <field name="state">code</field>
            <field name="code">model.calculate_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
