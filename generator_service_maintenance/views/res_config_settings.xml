<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_generator_res_config_settings" model="ir.ui.view">
        <field name="name">view.generator.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Generator Service" string="Generator Service"
                     data-key="generator_service_maintenance">
<!--                    <h2>Generator Service Journal</h2>-->
<!--                    <div class="row mt16 o_settings_container">-->
<!--                        <div class="col-12 col-lg-6 o_setting_box">-->
<!--                            <div class="o_setting_right_pane">-->
<!--                                <label for="generator_journal_id"/>-->
<!--                                <div class="text-muted">-->
<!--                                    Set default Journal for Generator Operations-->
<!--                                </div>-->
<!--                            </div>-->
<!--                            <div class="o_setting_right_pane">-->
<!--                                <field name="generator_journal_id"/>-->
<!--                            </div>-->
<!--                        </div>-->
<!--                    </div>-->
                    <h2>Maintenance Contract Renewal</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="contract_maintenance_date"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Send an automatic AMC Expire Mail Message when Date before this
                                        count
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="contract_maintenance_date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="contract_maintenance_amount"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Send an automatic AMC Expire Mail Message when Less than this amount
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="contract_maintenance_amount"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="action_menu_generator_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'generator_service_maintenance'}</field>
    </record>
    <menuitem id="generator_configuration" name="Configuration"
              parent="generator_service_maintenance.menu_generator_service_maintenance" sequence="16"
              groups="base.group_system"/>

    <menuitem id="generator_settings" name="Settings" parent="generator_configuration"
              action="action_menu_generator_config"/>
</odoo>