<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_service_completion_tree" model="ir.ui.view">
            <field name="name">view.service.completion.tree</field>
            <field name="model">service.completion</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>
        <record id="view_service_completion_form" model="ir.ui.view">
            <field name="name">view.service.completion.form</field>
            <field name="model">service.completion</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Service Completion">
                    <header>
                        <button string="Fetch Sale Data" type="object" name="fetch_sale_data"
                                class="oe_highlight" groups="base.group_user" states="draft"/>
                        <button string="Generate Invoice" type="object" name="generate_invoice"
                                class="oe_highlight" groups="base.group_user" states="draft"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title oe_read_only">
                            <h1>
                                <field name="name" nolabel="1"/>
                            </h1>
                        </div>
                        <group col="2" colspan="2">
                            <group>
                                <field name="partner_id" string="Customer"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <group string="Sale Order">
                            <field name="sale_order_ids" mode="tree" nolabel="1" editable="bottom">
                                <tree decoration-danger="not invoice_eligibility">
                                    <field name="invoice_eligibility" invisible="1"/>
                                    <field name="sale_order_id"/>
                                    <field name="sale_amount"/>
                                    <field name="service_type"/>
                                    <field name="availability_reason"/>
                                    <field name="allocated_no_service"/>
                                    <field name="remaining_no_service"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_menu_service_completion">
            <field name="name">Service Completion</field>
            <field name="res_model">service.completion</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create new Service Completion
                </p>
                <p>
                    Odoo helps you easily track all activities related to the Service Completion.
                </p>
            </field>
        </record>
        <menuitem id="menu_service_completion" name="Service Completion"
                  parent="generator_service_maintenance.generator_service_maintenance_report_menu"
                  action="action_menu_service_completion"
                  groups="base.group_system"/>
    </data>
</odoo>