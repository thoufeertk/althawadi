<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="timesheet_generator_form" model="ir.ui.view">
            <field name="name">generator.form.inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
            <field name="arch" type="xml">
                <field name="user_ids" position="after">
                    <field name="generator_service" attrs="{'invisible': [('generator_service', '=', False)]}"/>
                </field>
            </field>
        </record>
        <record id="generator_timesheet_action" model="ir.actions.act_window">
            <field name="name">Timesheets</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('generator_service','!=',False)]</field>
            <field name="context">{'create': False}</field>
            <field name="target">current</field>
        </record>
        <menuitem id="menu_technician_attendance" name="Attendance"
                  parent="menu_generator_service_maintenance"
                  groups="generator_service_maintenance.generator_user"/>

        <menuitem id="menu_technician_timesheet" name="Timesheet" parent="menu_technician_attendance"
                  action="generator_timesheet_action"/>
    </data>
</odoo>