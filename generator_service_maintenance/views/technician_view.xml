<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_tree" model="ir.ui.view">
            <field name="name">hr.employee.inherited.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Employee">
                    <field name="name"/>
                    <field name="work_phone"/>
                </tree>
            </field>
        </record>
        <record id="employee_form" model="ir.ui.view">
            <field name="name">hr.employee.inherited.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Employee">
                    <sheet>
                        <field name="image_1920" widget='image' class="oe_avatar"
                               options='{"zoom": true, "preview_image":"image_128"}'/>
                        <div class="oe_title">
                            <group>
                                <field name="name"/>
                                <field name="work_phone"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_menu_generator_technician" model="ir.actions.act_window">
            <field name="name">Technicians</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('generator_service_maintenance.employee_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('generator_service_maintenance.employee_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click here to create new Technicians
                </p>
                <p>
                    Odoo helps you easily track all activities related to Technicians.
                </p>
            </field>
        </record>
        <menuitem id="menu_technician_details" name="Technicians"
                  parent="generator_service_maintenance.menu_master_data"
                  action="action_menu_generator_technician"
                  groups="base.group_system"/>
    </data>
</odoo>