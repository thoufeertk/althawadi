<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="material_request_tree_view" model="ir.ui.view">
            <field name="name">Material Request</field>
            <field name="model">generator.material.request</field>
            <field name="arch" type="xml">
                <tree string="Material Request" create="false" edit="false">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="pending_list_id" string="Service"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="material_request_form_view" model="ir.ui.view">
            <field name="name">Material Request</field>
            <field name="model">generator.material.request</field>
            <field name="arch" type="xml">
                <form string="Work Order">
                    <header>
                        <button name="print_request" type="object" string="Print Request" class="oe_highlight"/>
                        <button name="action_send_email" type="object" string="Email Request" class="oe_highlight"
                                attrs="{'invisible': [('state','=','send')]}"/>
                        <button name="generate_purchase_order" type="object" string="Generate Purchase Order"
                                class="oe_highlight"
                                attrs="{'invisible': [('state','!=','send')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button class="oe_stat_button" name="button_view_purchase"
                                    attrs="{'invisible': [('purchase_order_count', '=', 0)]}"
                                    type="object" icon="fa-file-text">
                                <field name="purchase_order_count" widget="statinfo" string="Purchases"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" required="1" readonly="1" force_save="1"/>
                                <field name="pending_list_id" options="{'no_create': True}" readonly="1"
                                       force_save="1"/>
                                <field name="date" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="service_type" readonly="1" force_save="1"/>
                                <field name="project_id" readonly="1" force_save="1"/>
                                <field name="generator_id"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Spare Parts">
                                <field name="material_bom_line">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="product_unit_measure"/>
                                        <field name="price"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="material_request_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_material_request" model="ir.actions.act_window">
            <field name="name">Material Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generator.material.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click here to create a new Material Request
                </p>
                <p>
                    Odoo helps you easily track details about the Material Request created.
                </p>
            </field>
        </record>
        <menuitem id="material_request_menu" name="Material Request"
                  parent="generator_service_maintenance.menu_service_maintenance"
                  action="action_material_request"
                  groups="generator_service_maintenance.generator_technician"
                  sequence="10"/>
    </data>
</odoo>
