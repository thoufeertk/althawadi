<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="status_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <center>
                            <h1>Service Status Report</h1>
                        </center>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Tick for approved</th>
                                    <th>Generator FSD</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="line">
                                    <tr>
                                        <td>

                                        </td>
                                        <td>
                                            <span t-esc="line['fsd_number']"/>
                                        </td>
                                        <td>
                                            <t t-set="state_string" t-value="request.env['generator.material.request'].find_state_string(line['state'])"/>
                                            <span t-esc="state_string"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['cost']" t-options="{'widget': 'monetary', 'display_currency': company_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>