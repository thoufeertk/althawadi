<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="service_status_view_form" model="ir.ui.view">
            <field name="name">Service Status Report</field>
            <field name="model">service.status.report</field>
            <field name="arch" type="xml">
                <form string="Service Status Report">
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <footer>
                        <button name="print_pdf" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" type="object" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="service_status_wizard_action" model="ir.actions.act_window">
            <field name="name">Service Status Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.status.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="service_status_view_form"/>
            <field name="target">new</field>
        </record>

<!--        <menuitem id="service_status_wizard_menu" name="Service Status Report"-->
<!--                  parent="generator_service_maintenance.generator_service_maintenance_report_menu"-->
<!--                  action="service_status_wizard_action"-->
<!--                  sequence="3"/>-->
    </data>
</odoo>