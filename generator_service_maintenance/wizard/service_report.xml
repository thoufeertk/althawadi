<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="service_view_form" model="ir.ui.view">
            <field name="name">Monthly Report</field>
            <field name="model">service.report</field>
            <field name="arch" type="xml">
                <form string="Monthly Report">
                    <separator string="Monthly Report"/>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <footer>
                        <button name="print_pdf" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" type="object" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="service_wizard_action" model="ir.actions.act_window">
            <field name="name">Monthly Service Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="service_view_form"/>
            <field name="target">new</field>
        </record>
        <menuitem id="generator_service_maintenance_report_menu" name="Reporting"
                  parent="generator_service_maintenance.menu_generator_service_maintenance"
                  groups="generator_service_maintenance.generator_supervisor,generator_service_maintenance.generator_ewa_group"/>

        <menuitem id="generator_service_maintenance_wizard_menu" name="Monthly Report"
                  parent="generator_service_maintenance_report_menu"
                  action="service_wizard_action"
                  groups="generator_service_maintenance.generator_supervisor,generator_service_maintenance.generator_ewa_group"
        />
    </data>
</odoo>