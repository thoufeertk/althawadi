<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="category_generator_service_parent">
        <field name="name">Generator Service</field>
        <field name="description">Helps to manage generator services</field>
        <field name="sequence">30</field>
    </record>

    <record model="ir.module.category" id="category_generator_service">
        <field name="name">Generator Service</field>
        <field name="parent_id" ref="category_generator_service_parent"/>
        <field name="sequence">30</field>
    </record>

    <record id="generator_user" model="res.groups">
        <field name="name">Generator User</field>
        <field name="category_id" ref="category_generator_service"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="generator_ewa_group" model="res.groups">
        <field name="name">EWA Group</field>
        <field name="category_id" ref="category_generator_service"/>
    </record>

    <record id="generator_technician" model="res.groups">
        <field name="name">Technicians</field>
        <field name="category_id" ref="category_generator_service"/>
        <field name="implied_ids" eval="[(4, ref('generator_user'))]"/>
    </record>

    <record id="generator_supervisor" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="category_generator_service"/>
        <field name="implied_ids" eval="[(4, ref('generator_technician'))]"/>
    </record>

    <record id="generator_engineer" model="res.groups">
        <field name="name">Engineer</field>
        <field name="category_id" ref="category_generator_service"/>
        <field name="implied_ids" eval="[(4, ref('generator_supervisor'))]"/>
    </record>

    <record id="generator_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="category_generator_service"/>
        <field name="implied_ids" eval="[(4, ref('generator_engineer'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('generator_service_maintenance.generator_manager'))]"/>
    </record>

</odoo>
